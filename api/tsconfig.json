{
  "compilerOptions": {
    "target": "es2017",                                  
    "module": "commonjs",                                
    "baseUrl": "./src",                                 
    "paths": {                                           
      "@modules/*": ["modules/*"],
      "@infra/*": ["infra/*"],
      "@core/*": ["core/*"],
      "@config/*": ["config/*"],
      "@test/*": ["test/*"]
    },                                      
    "resolveJsonModule": true,                           
    "allowJs": true,                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": false,                                      
    "skipLibCheck": true                                 
  },
  "include": ["src"],
  "exclude": ["src/infra/database/sequelize"]
}
